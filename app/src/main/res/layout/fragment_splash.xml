<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_logo_container"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/areeb_logo"
            app:riv_corner_radius="20dp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_company_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Areeb Technical Task"
        android:textColor="@color/areeb_blue"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@id/cv_logo_container"
        app:layout_constraintStart_toStartOf="@id/cv_logo_container"
        app:layout_constraintTop_toBottomOf="@id/cv_logo_container"

        />

    <TextView
        android:id="@+id/tv_my_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:alpha="0.7"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:text="Ibrahim Hany \n Senior Android Developer"
        android:textColor="@color/areeb_grey"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="@id/cv_logo_container"
        app:layout_constraintStart_toStartOf="@id/cv_logo_container"
        app:layout_constraintTop_toBottomOf="@id/tv_company_title"

        />

</androidx.constraintlayout.widget.ConstraintLayout>